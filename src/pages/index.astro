---
import BaseLayout from '../layouts/BaseLayout.astro';
import ProfileCard from '../components/ProfileCard.astro';
import PostCard from '../components/PostCard.astro';
import Calendar from '../components/Calendar.astro';
import LinksCard from '../components/LinksCard.astro';
---

<BaseLayout title="子路的博客空间" description="这是我的个人博客，记录学习、生活和项目">
  <div class="flex flex-row gap-6 p-6">
    <div class="flex-1 flex flex-col gap-6">
      <ProfileCard />
      <div class="bg-card rounded-xl p-6 shadow-md mb-6 transition-colors duration-300">
        <h1 class="text-2xl font-bold mb-2">欢迎来到子路的博客</h1>
        <p class="mb-1">这是我的个人博客，记录学习、生活和项目。</p>
        <p>
          <a href="/blog" class="text-accent hover:underline">文章</a> |
          <a href="/projects" class="text-accent hover:underline">项目</a> |
          <a href="/about" class="text-accent hover:underline">关于我</a>
        </p>
      </div>
      <!-- 文章流，后续可循环渲染 PostCard -->
      <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6">
        <PostCard />
        <PostCard />
        <PostCard />
      </div>
    </div>
    <aside class="w-80 hidden xl:flex flex-col gap-6">
      <Calendar />
      <LinksCard />
    </aside>
  </div>
</BaseLayout>
